<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_App.Main_Screen.ChangeUserInforContent"
             BackgroundColor="{AppThemeBinding Light='White', Dark = '#1C1C2E'}">
    <VerticalStackLayout Padding="10" Spacing="20">
        <Label Text="Change Student information" TextColor="Blue" FontSize="20" FontAttributes="Bold"/>
        <!--Update Contact-->
        <Frame BorderColor="LightGray"
               CornerRadius="5"
               HasShadow="True"
               Padding="0">
            <VerticalStackLayout Padding="5" Spacing="10">
                <Entry x:Name="EntryContact" Placeholder="Your Contact..." FontSize="18"/>
                <Button x:Name="ChangeContact" Text="Update" FontSize="18" FontAttributes="Bold" BackgroundColor="DodgerBlue" TextColor="White" Clicked="ClickedChangeContact"/>
            </VerticalStackLayout> 
        </Frame>
        
        <!--Update  UUID-->
        <Frame BorderColor="LightGray"
       CornerRadius="5"
       HasShadow="True"
       Padding="0">
            <VerticalStackLayout Padding="5" Spacing="10">
                <Label Text="Do you want to update your UUID?"/>
                <Button x:Name="updateMAC" Text="Update" FontSize="18" FontAttributes="Bold" BackgroundColor="DodgerBlue" TextColor="White" Clicked="ClickedChangeUUID"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
