<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_App.MainPage"
             BackgroundColor="{AppThemeBinding Light='White', Dark = '#1C1C2E'}"
             Title="Student USTH App">

    <ScrollView>
        <Grid ColumnDefinitions="80,*" RowDefinitions="*">
            <!--Menu item-->
            <StackLayout Grid.Row="0" 
                         Grid.Column="0"
                         BackgroundColor="{AppThemeBinding Light='#DADADA', Dark = '#1C1C4E'}" 
                         Spacing="30" Padding="10" 
                         VerticalOptions="FillAndExpand" 
                         HorizontalOptions="Fill">
                <!-- Information Student-->
                <Frame x:Name="FrameUser" BorderColor="Transparent" BackgroundColor="Transparent" CornerRadius="10" HasShadow="False" Padding="5">
                    <ImageButton x:Name="user" Source="student_icon.png" HeightRequest="35"  BackgroundColor="{AppThemeBinding Light='White', Dark = '#1C5C9E'}" CornerRadius="10"  Clicked="OnstudentClicked"/>

                </Frame>
                
                <!--List Class Subject-->
                <Frame x:Name="FrameBook" BorderColor="Transparent" BackgroundColor="Transparent" CornerRadius="10" HasShadow="False" Padding="5">
                    <ImageButton x:Name="book" Source="icon_list.png" HeightRequest="35"  BackgroundColor="{AppThemeBinding Light='White', Dark = '#1C5C9E'}" CornerRadius="10" Clicked="OnBookClicked"/>

                </Frame>
                
                <!--Update Data's student-->
                <Frame x:Name="FrameConstruction" BorderColor="Transparent" BackgroundColor="Transparent" CornerRadius="10" HasShadow="False" Padding="5">
                    <ImageButton x:Name="construction" Source="icon_upload.png" HeightRequest="35"  BackgroundColor="{AppThemeBinding Light='White', Dark = '#1C5C9E'}" CornerRadius="10" Clicked="OnContruction"/>
                </Frame>
                
                <!--Open Camera for check attendance-->
                <ImageButton x:Name="CameraButton" Source="icon_camera.png" BackgroundColor="{AppThemeBinding Light='#E6F8FA', Dark = '#1C1C8E'}" HeightRequest="40" CornerRadius="10" Clicked="OnCameraClick"/>
            </StackLayout>
            <!--Content-->
            <ContentView x:Name="RightContent" Grid.Column="1" Padding="10"/>
        </Grid>
    </ScrollView>

</ContentPage>
