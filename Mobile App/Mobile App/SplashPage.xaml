<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_App.SplashPage"
             BackgroundColor="#512BD4"
             NavigationPage.HasNavigationBar="False"
             >
    <AbsoluteLayout x:Name="RootLayout">

        <BoxView x:Name="BackgroundOverlay"
                 BackgroundColor="#512BD4"
                 Opacity="1"
                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                 AbsoluteLayout.LayoutFlags="All" />
        
        <BoxView x:Name="RippleEffect"
          BackgroundColor="White"
          CornerRadius="1000"
          Opacity="0"
          AbsoluteLayout.LayoutBounds="0.5,0.5,20,20"
          AbsoluteLayout.LayoutFlags="PositionProportional" />

        <HorizontalStackLayout x:Name="TitleLayout"
                               AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                               AbsoluteLayout.LayoutFlags="PositionProportional"
                               Spacing="0">
            <Label x:Name="DotLabel"
                   Text="."
                   FontSize="60"
                   FontAttributes="Bold"
                   TextColor="White"
                   TranslationY="0"
                   VerticalOptions="Center"
                   Padding="0"
                   Margin="0,0,0,0" />
            <Label Text="NET"
                   FontSize="60"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

       
    </AbsoluteLayout>
</ContentPage>